<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang -->
    <solid android:color="#FFFFFF" /> <!-- Putih -->

    <!-- Warna border -->
    <stroke
        android:width="2dp"
        android:color="#DADADA" /> <!-- Abu-abu muda -->

    <!-- Sudut rounded -->
    <corners android:radius="8dp" />

    <!-- Margin dalam (opsional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
