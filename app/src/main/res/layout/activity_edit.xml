<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTextEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="EDIT DATA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Nama Pemilih -->
    <TextView
        android:id="@+id/namaPemilihLabelEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nama Pemilih"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/headerTextEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/namaPemilihInputEdit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:hint="Nama Pemilih Sebelumnya"
        android:background="@drawable/input_background"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/namaPemilihLabelEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NIK -->
    <TextView
        android:id="@+id/nikLabelEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NIK"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/namaPemilihInputEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nikInputEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="NIK Pemilih Sebelumnya"
        android:background="@drawable/border_background"
        android:padding="8dp"
        android:inputType="number"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/nikLabelEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Gender -->
    <TextView
        android:id="@+id/genderLabelEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="GENDER"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/nikInputEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/genderGroupEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/genderLabelEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/genderMaleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki Laki"
            android:textSize="14sp"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/genderFemaleEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginStart="16dp" />
    </RadioGroup>

    <!-- Alamat -->
    <TextView
        android:id="@+id/alamatLabelEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Alamat"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/genderGroupEdit"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/alamatInputEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Alamat Pemilih Sebelumnya"
        android:background="@drawable/border_background"
        android:padding="8dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/alamatLabelEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button Simpan -->
    <Button
        android:id="@+id/simpanButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Simpan"
        android:backgroundTint="#00A86B"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/alamatInputEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
